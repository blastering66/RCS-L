<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:src="@drawable/logo_lafiya_horizontal" />

        <TextView
            android:id="@+id/judul_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Find Doctor"
            android:textColor="@color/textview_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@android:drawable/ic_search_category_default" />

        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iv_emptydataset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_empty_datase" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Data Found"
            android:textSize="22sp"
            android:paddingTop="20dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <ListView
        android:id="@+id/ls_dokter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_iklan"
        android:layout_below="@id/header"
        
        android:background="@drawable/shape_dropshadow"
        android:layout_margin="@dimen/size_padding_double"
        android:scrollbars="none" >
    </ListView>

    <ImageView
        android:id="@+id/img_iklan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout><!-- From: file:/Users/macbook/Desktop/Android%20Studio%20Repo%20Workspace/Lafiya/Lafiya/lafiya/src/main/res/layout/layout_findoctor.xml -->