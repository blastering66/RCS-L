<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_iklan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
        
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:src="@drawable/logo_lafiya_horizontal" />

        <TextView
            android:id="@+id/judul_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/textview_judul_finddoctor_detail_schedule_create"
            android:textColor="@color/textview_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@android:drawable/ic_search_category_default"
            android:visibility="gone" />

        
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_iklan"
        android:layout_below="@id/header" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_nama_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Dokter"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jadwal_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Jadwal, Senin dan Kamis"
                    android:textSize="22sp" />
                
                <EditText
                    android:id="@+id/txt_nama_pasien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Pasien..."
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/txt_keperluan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keperluan..."
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:lines="5"
                    android:textSize="20sp"
                    android:padding="5dp" />

                <DatePicker
                    android:id="@+id/datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnersShown="true"
                    android:padding="5dp" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />                

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector"
                    android:text="@string/btn_label_submit"
                    android:textColor="@color/button_text_color" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/Users/macbook/Desktop/Android%20Studio%20Repo%20Workspace/Lafiya/Lafiya/lafiya/src/main/res/layout/layout_appoinment.xml -->